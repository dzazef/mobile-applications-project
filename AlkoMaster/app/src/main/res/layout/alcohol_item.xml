<?xml version="1.0" encoding="utf-8"?>
<!-- do wykorzystania w liscie wybranych alkoholi do alkomatu (chyba mozna tez wykorzystac w porownywarce?) -->

<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/alcohol_item"
            android:orientation="horizontal"
            android:background="@drawable/listshape"
            android:columnCount="6"
            android:rowCount="2"
            android:useDefaultMargins="true">

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_columnWeight="1"
              android:layout_column="1" android:layout_row="0" android:text="nazwa"
              android:textAppearance="@style/TextAppearance.AppCompat.Large"
              android:textAlignment="center"
              android:id="@+id/alcohol_item_name"/>

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_columnWeight="1"
              android:layout_column="1" android:layout_row="1" android:text="1x"
              android:textAlignment="center"
              android:background="@drawable/listshape"
              android:id="@+id/alcohol_item_amount"/>


    <ImageView android:layout_width="40dp" android:layout_height="40dp" android:layout_columnWeight="1"
               android:contentDescription="@null" android:id="@+id/imageView"
               android:layout_column="0" android:layout_row="0" android:layout_rowSpan="2"
               android:layout_gravity="center"/>

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_columnWeight="2"
              android:layout_column="2" android:layout_row="1" android:text="ml" android:layout_marginStart="10dp" android:layout_marginEnd="10dp"
              android:background="@drawable/listshape"
              android:id="@+id/alcohol_item_capacity"/>

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_columnWeight="2"
              android:layout_column="3" android:layout_row="1" android:text="%" android:layout_marginStart="10dp" android:layout_marginEnd="10dp"
              android:background="@drawable/listshape"
              android:id="@+id/alcohol_item_content"/>

    <ImageButton android:layout_height="40dp" android:layout_width="40dp" android:layout_columnWeight="1"
            android:layout_column="4" android:layout_row="0" android:src="@drawable/baseline_clear_black_18dp" android:contentDescription="@null"
                 android:layout_gravity="center" android:id="@+id/x_button"
    />

    <ImageButton android:layout_height="40dp" android:layout_width="40dp" android:contentDescription="@null"
            android:layout_column="5" android:layout_row="0" android:layout_columnWeight="1" android:id="@+id/plus_button"
    android:src="@drawable/baseline_add_black_18dp"/>

    <ImageButton android:layout_height="40dp" android:layout_width="40dp" android:contentDescription="@null"
            android:layout_column="5" android:layout_row="1" android:layout_columnWeight="1" android:id="@+id/minus_button"
    android:src="@drawable/baseline_remove_black_18dp"/>

</GridLayout>

