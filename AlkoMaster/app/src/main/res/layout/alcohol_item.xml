<?xml version="1.0" encoding="utf-8"?>
<!-- do wykorzystania w liscie wybranych alkoholi do alkomatu (chyba mozna tez wykorzystac w porownywarce?) -->

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="100dp"
                                             android:id="@+id/root_alcohol_item"
                                             android:background="@drawable/listshape"
                                             android:columnCount="6"
                                             android:rowCount="2"
                                             android:useDefaultMargins="true">

    <TextView android:layout_height="0dp" android:layout_width="0dp"
              android:text="nazwa"
              android:textAppearance="@style/TextAppearance.AppCompat.Large"
              android:textAlignment="center"
              android:id="@+id/alcohol_item_name"
              app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintBottom_toTopOf="@+id/guideline" app:layout_constraintEnd_toStartOf="@+id/guideline3"
              android:gravity="center"/>

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content"
              android:text="1x"
              android:textAlignment="center"
              android:background="@drawable/listshape"
              android:id="@+id/alcohol_item_amount"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintHorizontal_bias="0.5"
              app:layout_constraintEnd_toStartOf="@+id/alcohol_item_capacity" android:layout_marginTop="8dp"
              app:layout_constraintTop_toTopOf="@+id/guideline"
              app:layout_constraintBottom_toBottomOf="parent" android:layout_margin="0dp" android:padding="5dp"/>


    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content"
              android:text="ml"
              android:background="@drawable/listshape"
              android:id="@+id/alcohol_item_capacity"
              app:layout_constraintStart_toEndOf="@+id/alcohol_item_amount" app:layout_constraintHorizontal_bias="0.5"
              app:layout_constraintEnd_toStartOf="@+id/alcohol_item_content" android:layout_marginTop="32dp"
              app:layout_constraintTop_toTopOf="@+id/guideline"
              app:layout_constraintBottom_toBottomOf="parent" android:layout_margin="0dp" android:padding="5dp"/>

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content"
              android:text="%"
              android:background="@drawable/listshape"
              android:id="@+id/alcohol_item_content"
              app:layout_constraintStart_toEndOf="@+id/alcohol_item_capacity" app:layout_constraintHorizontal_bias="0.5"
              app:layout_constraintEnd_toStartOf="@+id/x_button" android:layout_marginTop="8dp"
              app:layout_constraintTop_toTopOf="@+id/guideline"
              app:layout_constraintBottom_toBottomOf="parent" android:layout_margin="0dp" android:padding="5dp"/>

    <ImageButton android:layout_height="wrap_content" android:layout_width="wrap_content"
                 android:src="@drawable/baseline_clear_black_18dp"
                 android:contentDescription="@null"
                 android:id="@+id/x_button"
                 app:layout_constraintEnd_toStartOf="@+id/guideline3" android:layout_marginEnd="8dp"
                 android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/guideline"
                 android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                 android:padding="15dp"/>

    <ImageButton android:layout_height="wrap_content" android:layout_width="wrap_content"
                 android:contentDescription="@null"
                 android:id="@+id/plus_button"
                 android:src="@drawable/baseline_add_black_18dp"
                 app:layout_constraintEnd_toEndOf="parent"
                 app:layout_constraintStart_toStartOf="@+id/guideline3"
                 app:layout_constraintTop_toTopOf="parent"
                 app:layout_constraintBottom_toTopOf="@+id/guideline" android:padding="15dp"/>

    <ImageButton android:layout_height="wrap_content" android:layout_width="wrap_content"
                 android:contentDescription="@null"
                 android:id="@+id/minus_button"
                 android:src="@drawable/baseline_remove_black_18dp"
                 app:layout_constraintTop_toTopOf="@+id/guideline"
                 app:layout_constraintEnd_toEndOf="parent"
                 app:layout_constraintStart_toStartOf="@+id/guideline3"
                 app:layout_constraintBottom_toBottomOf="parent" android:padding="15dp"/>
    <android.support.constraint.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/guideline"
            app:layout_constraintGuide_percent="0.5"/>
    <android.support.constraint.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/guideline3"
            app:layout_constraintGuide_percent="0.8091603"/>

</android.support.constraint.ConstraintLayout>