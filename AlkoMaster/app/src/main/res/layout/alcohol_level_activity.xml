<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LevelActivityData">


    <TextView
            android:text="@string/alkomat_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textAlignment="center"
            android:id="@+id/textView"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/radioGroup"/>
    <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/radioGroup"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout_weight">

        <RadioButton android:id="@+id/radioButton_female"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="@string/radioButton_female"
                     android:onClick="onRadioButtonClicked"/>
        <RadioButton android:id="@+id/radioButton_male"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="@string/radioButton_male"
                     android:onClick="onRadioButtonClicked"/>

    </RadioGroup>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:id="@+id/linearLayout_weight"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintTop_toBottomOf="@+id/radioGroup"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout2">
        <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:id="@id/textView"
                  android:labelFor="@id/editText_waga"
                  android:textSize="15sp" android:textAlignment="center" android:text="@string/textView_waga"/>
        <EditText android:layout_width="0dp" android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:textAlignment="center"
                  android:id="@+id/editText_waga"
                  android:inputType="number"
                  tools:ignore="Autofill"/>
        <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:id="@id/textView"
                  android:labelFor="@id/editText_waga"
                  android:textSize="15sp" android:textAlignment="center" android:text="@string/textView_kg"/>
    </LinearLayout>


    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:id="@+id/linearLayout2"
                  app:layout_constraintStart_toStartOf="parent"
                  android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                  android:layout_marginEnd="8dp" app:layout_constraintTop_toBottomOf="@+id/linearLayout_weight"
                  app:layout_constraintHorizontal_bias="0.5" app:layout_constraintBottom_toTopOf="@+id/button_dalej">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:id="@+id/linearLayout_poczatek"
                android:layout_height="wrap_content"
                android:layout_weight="1">
            <TextView android:layout_width="match_parent" android:layout_height="0dp"
                      android:layout_weight="1"
                      android:id="@id/textView"
                      android:textSize="15sp" android:textAlignment="center" android:text="@string/textView_poczatek"/>
            <TextClock android:layout_width="match_parent" android:layout_height="0dp"
                       android:layout_weight="1"
                       android:textAlignment="center"
                       android:onClick="showTimePickerDialog" android:textSize="15sp"
            />
        </LinearLayout>

        <Space android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"/>

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:id="@+id/linearLayout_koniec"
                android:layout_height="wrap_content"
                android:layout_weight="1">
            <TextView android:layout_width="match_parent" android:layout_height="0dp"
                      android:layout_weight="1"
                      android:id="@id/textView"
                      android:textSize="15sp" android:textAlignment="center" android:text="@string/textView_koniec"/>
            <TextClock android:layout_width="match_parent" android:layout_height="0dp"
                       android:layout_weight="1"
                       android:textAlignment="center"
                       android:onClick="showTimePickerDialog" android:textSize="15sp"
            />
        </LinearLayout>
    </LinearLayout>
    <Button
            android:text="@string/button_dalej"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="startNextActivity"
            android:id="@+id/button_dalej" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>


</android.support.constraint.ConstraintLayout>