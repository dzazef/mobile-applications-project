<?xml version="1.0" encoding="utf-8"?>

<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/alcohol_item"
            android:orientation="horizontal"
            android:columnCount="6"
            android:rowCount="2"
            android:background="@drawable/listshape"
            android:useDefaultMargins="true" android:layout_marginRight="10dp" android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp">

    <TextView android:layout_height="57dp" android:layout_width="37dp" android:layout_columnWeight="15"
              android:layout_column="1" android:layout_row="0" android:text="name" android:id="@+id/name"

              android:textAppearance="@style/TextAppearance.AppCompat.Large" android:textAlignment="center"
              android:layout_rowWeight="5"/>


    <ImageView android:layout_width="47dp" android:layout_height="58dp" android:layout_columnWeight="1"
               android:contentDescription="@null" android:id="@+id/imageView"
               android:layout_column="0" android:layout_row="0" android:layout_rowSpan="2"
               android:layout_gravity="center" android:background="@drawable/mugs" android:textAlignment="center"/>

    <TextView android:layout_height="wrap_content" android:layout_width="10dp" android:layout_columnWeight="1"
              android:layout_column="1" android:layout_row="1" android:text="ml" android:layout_marginStart="10dp"
              android:layout_marginEnd="10dp" android:id="@+id/capacity"
              android:background="@drawable/listshape" android:textAlignment="center"/>

    <TextView android:layout_height="wrap_content" android:layout_width="30dp" android:layout_columnWeight="1"
              android:layout_row="1" android:text="%" android:background="@drawable/listshape"
              android:layout_marginStart="10dp"

              android:layout_marginEnd="10dp" android:id="@+id/content" android:layout_column="3"
              android:textAlignment="center" android:layout_gravity="fill"/>

    <TextView
            android:background="@drawable/listshape"
            android:text="price"
            android:layout_height="wrap_content" android:id="@+id/price" android:textAlignment="center"
            android:layout_width="97dp"/>
    <TextView
            android:text="swipe to delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_row="0" android:id="@+id/delete"
            android:layout_column="4"
            android:textSize="10sp" android:layout_gravity="right"/>

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="5"
        android:layout_gravity="center_horizontal|center_vertical"
        android:textColorHighlight="@android:color/background_dark"
        android:textColorLink="@android:color/background_dark"
        android:textCursorDrawable="@android:color/background_dark" />

</GridLayout>