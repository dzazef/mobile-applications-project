<!-- nie miescilo sie na ekranie dla dlugich nazw i rozjezdzalo sie przy obrocie ekranu, stary layout w komentarzu -->

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:id="@+id/alcohol_item"
    android:background="@drawable/listshape"
    android:columnCount="6"
    android:rowCount="2"
    android:useDefaultMargins="true">

    <TextView android:layout_height="wrap_content" android:layout_width="0dp"
        android:text="nazwa"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textAlignment="center"
        android:id="@+id/name"
        app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/guideline" app:layout_constraintEnd_toStartOf="@+id/guideline3"
        android:gravity="center"/>

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content"
        android:text="1x"
        android:textAlignment="center"
        android:background="@drawable/listshape"
        android:id="@+id/price"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintEnd_toStartOf="@+id/capacity" android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="@+id/guideline"
        app:layout_constraintBottom_toBottomOf="parent" android:layout_margin="0dp" android:padding="5dp"/>


    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content"
        android:text="ml"
        android:background="@drawable/listshape"
        android:id="@+id/capacity"
        app:layout_constraintStart_toEndOf="@+id/price" app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintEnd_toStartOf="@+id/content" android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="@+id/guideline"
        app:layout_constraintBottom_toBottomOf="parent" android:layout_margin="0dp" android:padding="5dp"/>

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content"
        android:text="%"
        android:background="@drawable/listshape"
        android:id="@+id/content"
        app:layout_constraintStart_toEndOf="@+id/capacity" app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintEnd_toStartOf="@+id/checkBox" android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="@+id/guideline"
        app:layout_constraintBottom_toBottomOf="parent" android:layout_margin="0dp" android:padding="5dp"/>

    <TextView
        android:id="@+id/delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"

        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/swipe"
        android:textSize="10sp"
        app:layout_constraintBottom_toTopOf="@+id/guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox android:layout_height="wrap_content" android:layout_width="wrap_content"
        android:contentDescription="@null"
        android:id="@+id/checkBox" app:layout_constraintTop_toTopOf="@+id/guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline3"
        app:layout_constraintBottom_toBottomOf="parent" android:padding="15dp"/>

    <android.support.constraint.Guideline
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:id="@+id/guideline"
        app:layout_constraintGuide_percent="0.5"/>

    <android.support.constraint.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.78" />

</android.support.constraint.ConstraintLayout>

