<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <android.support.constraint.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/addalcland_gdl1"
            app:layout_constraintGuide_percent="0.50"/>
    <?xml version="1.0" encoding="utf-8"?>

    <TextView
            android:text="Nazwa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/addalc_txt_name"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.2"
            app:layout_constraintEnd_toStartOf="@+id/addalcland_gdl1"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/addalc_ptxt_name"
            android:hint="Nazwa"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.35"
            app:layout_constraintEnd_toStartOf="@+id/addalcland_gdl1"/>
    <TextView
            android:text="Pojemność"
            android:layout_width="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_height="wrap_content" android:id="@+id/addalc_txt_capacity"
            app:layout_constraintVertical_bias="0.55" app:layout_constraintEnd_toStartOf="@+id/addalcland_gdl1"
    />
    <EditText
            android:layout_width="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/addalc_ptxt_capacity" app:layout_constraintVertical_bias="0.7"
            app:layout_constraintEnd_toStartOf="@+id/addalcland_gdl1"/>
    <TextView
            android:text="Zawartość alkoholu"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/addalc_txt_content" app:layout_constraintVertical_bias="0.2"
            app:layout_constraintStart_toStartOf="@+id/addalcland_gdl1" android:layout_marginStart="8dp"/>
    <EditText
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/addalc_ptxt_content" app:layout_constraintStart_toStartOf="@+id/addalcland_gdl1"
            app:layout_constraintVertical_bias="0.35"/>
    <TextView
            android:text="Cena"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/addalc_txt_price"
            app:layout_constraintVertical_bias="0.55" app:layout_constraintStart_toStartOf="@+id/addalcland_gdl1"
    />
    <EditText
            android:layout_width="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/addalc_ptxt_price" app:layout_constraintVertical_bias="0.7"
            app:layout_constraintStart_toStartOf="@+id/addalcland_gdl1"/>
    <Button
            android:text="Dodaj"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/addalc_btn_add" app:layout_constraintVertical_bias="0.9"/>
</android.support.constraint.ConstraintLayout>